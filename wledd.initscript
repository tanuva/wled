# Start last, stop first
START=99
STOP=0

start() {
	if [ -e /tmp/wledd.pid ]
	then
		echo "wledd is already running, exiting."
		return -1
	fi
	nice -n +20 /root/wledd
}

stop() {
	if [ -e /tmp/wledd.pid ]
	then
		kill $(cat /tmp/wledd.pid)
		rm /tmp/wledd.pid
	fi
}
